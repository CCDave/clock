<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/RelativeLayout01_head" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:background="@drawable/user_all_line"
	>
	<RelativeLayout 
	    android:layout_width="fill_parent" 
		android:layout_height="200dip" 
		android:id="@+id/PictureLayout_head"
		android:contentDescription="@string/des"
	    >
	    
	    <ImageView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:id="@+id/ItemBigPicture_head"
			android:contentDescription="@string/des"	
		/>
	    <RelativeLayout
                android:id="@+id/recordframe_head"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
          		android:layout_alignParentBottom ="true"
                >           
 				<Button
	  			android:id="@+id/ItemButtonPlayRecord_head"
				android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_centerHorizontal="true"
	 			/>
 			
    	</RelativeLayout>  
	</RelativeLayout>
	

	    <LinearLayout 
	        android:id="@+id/ItemButtons"
	        android:layout_below="@id/PictureLayout_head"
	        android:layout_height="wrap_content" 
    		android:layout_width="fill_parent"
    		android:orientation="horizontal" 
    		android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:paddingTop="2.5dip"
			android:paddingBottom="2.5dip"
			android:layout_margin="2dip"
			android:background="@drawable/user_top_line"
	        >
	        <Button
	            android:id="@+id/ItemButtonLike_head"
    			android:layout_width="0dip"
    			android:layout_height="wrap_content"
    			android:text="123个闹钟"
    			android:layout_weight="1"
    			android:paddingLeft="5dip"
				android:paddingRight="5dip"
				android:paddingTop="2.5dip"
				android:paddingBottom="2.5dip"
				android:layout_margin="2dip"
				android:background="@drawable/user_right_line"
				android:textColor="#FF0000"
	            />
	        <Button 
	            android:id="@+id/ItemButtonTalk_head"
    			android:layout_width="0dip"
    			android:layout_height="wrap_content"
    			android:text="粉丝互动"
    			android:layout_weight="1"
    			android:paddingLeft="5dip"
				android:paddingRight="5dip"
				android:paddingTop="2.5dip"
				android:paddingBottom="2.5dip"
				android:layout_margin="2dip"
				android:background="@drawable/user_right_line"
				android:textColor="#FF0000"
	            />
	        <Button 
	            android:id="@+id/ItemButtonListen_head"
    			android:layout_width="0dip"
    			android:layout_height="wrap_content"
    			android:text="成就"
    			android:layout_weight="1"
    			android:paddingLeft="5dip"
				android:paddingRight="5dip"
				android:paddingTop="2.5dip"
				android:paddingBottom="2.5dip"
				android:layout_margin="2dip"
				android:background="#FFFFFF"
				android:textColor="#FF0000"
	            />
	    </LinearLayout>

</RelativeLayout>