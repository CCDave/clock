<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:background="@color/white"
	android:orientation="vertical" 
	>
    <FrameLayout
                android:id="@+id/HeadMyColckcontent"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="0"
          
                >
                <TextView 
   				 	android:text="@string/record" 
    		     	android:layout_height="fill_parent" 
                 	android:layout_width="fill_parent" 
    			 	android:textSize="20sp"
    				android:background="@color/headframcolor"
    				android:textColor="@color/black"
    				android:id="@+id/ItemRecord"
    				android:paddingLeft="12dip"
    				android:gravity="center"
    />
 
    </FrameLayout>
    
    <ListView
    	android:divider="@drawable/liner"
    	android:dividerHeight="1dip"
        android:id="@+id/ListViewUserData"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_below="@id/HeadMyColckcontent"
        android:layout_weight="1"
        >
    </ListView>
	
    <RelativeLayout 
        android:divider="@drawable/liner"
    	android:dividerHeight="1dip"
        android:id="@+id/tishitupian"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_below="@id/HeadMyColckcontent"
        android:layout_weight="1"
        >        
        <ImageView 
            android:layout_height="350dip" 
            android:layout_width="fill_parent" 
            android:id="@+id/tishitupian"
            android:background="@drawable/luyintixing"
            />
    </RelativeLayout>
    
	<RelativeLayout 
	    android:id="@+id/relativegetrecord"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_alignParentBottom="true"
       
        android:layout_weight="0"
	    >
                
	    <Button
    				android:id="@+id/ButtonStartRecord"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text=""
    				android:layout_centerHorizontal="true"	
    				android:layout_centerVertical ="true"
    				android:layout_centerInParent="true"
    				android:background="@drawable/luzhianniu"
    				android:paddingBottom="20dip"
    			 />
	</RelativeLayout>
    
</LinearLayout>